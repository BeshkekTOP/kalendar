<UserControl x:Class="kalendarik.DayCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:kalendarik"
             mc:Ignorable="d" Height="80" Width="80">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height ="2*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Name" Text="{Binding Day}" Grid.Row="0" TextAlignment="Center" Background="#FF989494"/>
        <Image Source="/scala.jpg" Grid.Row="1" MouseDown="Image_MouseDown" Stretch="Fill"/>
    </Grid>
</UserControl>
